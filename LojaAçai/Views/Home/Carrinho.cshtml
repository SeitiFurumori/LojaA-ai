@model List<LojaAçai.Models.CadastrarModels>
@{
    ViewBag.Title = "Carrinho";
}
<h2>Carrinho</h2>
@if (Model != null)
{
    <ul>
        @foreach (LojaAçai.Models.CadastrarModels v in Model)

        {

        <li>@v.Quantidade @v.Descricao @v.Tipo | Preço:R$ @v.Preco  | Total:R$ @v.Total  <a href="~/Home/Excluir/@v.Codigo">excluir</a></li>

        }
    </ul>
}
<br />
<br />
<br />
<br />
<div class="row">
    <form method="post" action="~/Home/Comprar">
        <div class="col-sm-5">
            <input class="btn btn-primary" type="submit" value="Finalizar" />
        </div>
    </form>
    <form method="post" action="~/Home/Sair">
        <div class="col-sm-5">
            <input class="btn btn-primary" type="submit" value="Sair" />
        </div>
    </form>
</div>

